<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">
    <TextView
        android:id="@+id/reset_password_title"
        android:text="Quên Mật Khẩu"
        android:textSize="26dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/pinkColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/reset_password_description"
        android:text="Bạn vui lòng điền Email đã đăng ký, hệ thống sẽ xác thực và gửi mã OTP qua Email. Xin cảm ơn!"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/reset_password_edt"
        android:hint="Email"
        android:background="@drawable/customs_edittext_login"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/custom_email_ic"
        android:drawablePadding="15dp"
        android:paddingLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_password_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/reset_password_edt"
        android:weightSum="2"
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reset_password_cancle"
            android:layout_margin="10dp"
            android:text="cancle"
            android:background="@drawable/background_button_login_back"
            android:textColor="@color/black"
            style="Th"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="52dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reset_password_send"
            android:text="send"
            android:background="@drawable/background_button_login"
            android:textColor="@color/black"
            android:layout_margin="10dp"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="52dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>